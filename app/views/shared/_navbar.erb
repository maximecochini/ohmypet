<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top shadow-sm">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "ohmypet -large.png" %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if user_signed_in? %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto d-flex justify-content-between">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Pets", pets_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto d-flex justify-content-between align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to dashboard_path, class: "nav-link text-primary", alt: "Dashboard" do %><i class="fas fa-th-large"></i><% end %>
          </li>
          <li class="nav-item omp_vl"></li>
          <li class="nav-item">
            <span class="nav-link text-primary"><i class="fas fa-cog"></i></span>
          </li>
          <li class="nav-item">
            <span class="nav-link text-primary"><i class="fas fa-question"></i></span>
          </li>
          <li class="nav-item dropdown ml-4 blob-relative">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to dashboard_path, class: "dropdown-item" do %><i class="fas fa-th-large"></i> Dashboard<% end %>
              <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %><i class="fas fa-sign-out-alt"></i> Log out<% end %>
            </div>
          </li>
          <li class="nav-item">
            <strong class="nav-link text-dark">Hello <%= current_user.first_name %></strong>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "btn btn-outline-secondary" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>