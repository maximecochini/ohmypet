<div class="container omp_mt-section blob-relative">
  <h1 class="text-center">Your Dashboard</h1>
  <svg viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" class="blob blob-title-center">
    <path fill="#BAE6FF" d="M44.4,-53.9C59.3,-50.3,74.3,-39.7,79,-25.6C83.8,-11.5,78.2,6.1,69.1,18.8C60,31.6,47.2,39.5,35.1,46.9C23,54.4,11.5,61.3,-0.1,61.4C-11.7,61.6,-23.3,54.9,-38,48.3C-52.7,41.7,-70.4,35.2,-79.5,22.3C-88.6,9.4,-88.9,-9.8,-80.5,-23.2C-72.1,-36.7,-54.9,-44.3,-40,-47.8C-25.1,-51.4,-12.6,-50.9,1.1,-52.4C14.8,-53.9,29.6,-57.5,44.4,-53.9Z" transform="translate(55 55)" />
  </svg>
</div>

<div class="container omp_mt-section">
  <h2>Loves you will sit for</h2>
  <div class="omp_grid-2-3">
    <% @sittings.limit(5).each do |sitting| %>
      <div class="omp_card-2-3 d-flex flex-row align-items-center justify-content-between">
        <img src="https://i.f1g.fr/media/madame/1900x1900/sites/default/files/img/2014/12/grumpy-cat-un-chat-souvent-mis-en-scene.jpg" class="omp_card-avatar" alt="">
        <div class="omp_card-column-lg">
          <p class="omp_pet-name omp_headers-font"><%= sitting.pet.name.capitalize %></p>
          <p class="omp_pet-info"><%= sitting.pet.species.capitalize %> - <%= sitting.pet.age %> yr. old</p>
        </div>
        <div class="omp_card-column-xl">
          <div class="d-flex justify-content-between">
            <span class="omp_pet-badge badge badge-primary">BADGE</span>
            <span class="omp_pet-likes"><i class="far fa-heart"></i> 4.8</span>
          </div>
          <span class="omp_sitting_dates omp_headers-font"><i class="fas fa-calendar"></i> <%= sitting.start_date.strftime('%a %d %b') %> - <%= sitting.end_date.strftime('%a %d %b') %></span>
        </div>
        <div>
          <i class="omp_card-large-i fas fa-paw"></i>
          <i class="omp_card-large-i fas fa-ellipsis-h"></i>
        </div>
      </div>
      <div class="omp_card-1-3 d-flex flex-row align-items-center justify-content-between">
        <img src="https://fr.web.img4.acsta.net/pictures/15/07/27/15/04/271855.jpg" class="omp_card-avatar" alt="">
        <div class="omp_card-column-lg">
          <p class="omp_owner-name omp_headers-font"><%= sitting.pet.user.first_name.capitalize %> <%= sitting.pet.user.last_name.capitalize %></p>
          <div class="d-flex justify-content-between">
            <span class="omp_pet-badge badge badge-primary">BADGE</span>
            <span class="omp_pet-likes"><i class="fas fa-heart"></i> 4.8</span>
          </div>
        </div>
        <div>
          <i class="omp_card-large-i fas fa-user"></i>
          <i class="omp_card-large-i fas fa-ellipsis-h"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container omp_mt-section blob-relative">
  <h2>Manage your team</h2>
  <svg viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" class="blob blob-title-center">
    <path fill="#BAE6FF" d="M44.4,-53.9C59.3,-50.3,74.3,-39.7,79,-25.6C83.8,-11.5,78.2,6.1,69.1,18.8C60,31.6,47.2,39.5,35.1,46.9C23,54.4,11.5,61.3,-0.1,61.4C-11.7,61.6,-23.3,54.9,-38,48.3C-52.7,41.7,-70.4,35.2,-79.5,22.3C-88.6,9.4,-88.9,-9.8,-80.5,-23.2C-72.1,-36.7,-54.9,-44.3,-40,-47.8C-25.1,-51.4,-12.6,-50.9,1.1,-52.4C14.8,-53.9,29.6,-57.5,44.4,-53.9Z" transform="translate(55 55)" />
  </svg>
  <div class="omp_grid-2-3">
    <% @pets.order(:name).limit(5).each do |pet| %>
      <div class="omp_card-2-3 d-flex flex-row align-items-center justify-content-between">
        <img src="https://i.f1g.fr/media/madame/1900x1900/sites/default/files/img/2014/12/grumpy-cat-un-chat-souvent-mis-en-scene.jpg" class="omp_card-avatar" alt="">
        <div class="omp_card-column-lg">
          <p class="omp_pet-name omp_headers-font"><%= pet.name.capitalize %></p>
          <p class="omp_pet-info"><%= pet.species.capitalize %> - <%= pet.age %> yr. old</p>
        </div>
        <div class="omp_card-column-xl omp_d-none-mob">
          <div class="d-flex justify-content-between">
            <span class="omp_pet-badge badge badge-primary">BADGE</span>
            <span class="omp_pet-likes"><i class="fas fa-heart"></i> 4.8</span>
          </div>
          <p class="omp_announce-title"><%= pet.description[0..30].capitalize %></p>
        </div>
        <div>
          <i class="omp_card-large-i fas fa-paw"></i>
          <i class="omp_card-large-i fas fa-ellipsis-h"></i>
        </div>
      </div>
      
      <% sitting = pet.sittings[0] %>
      <% if pet.sittings.empty? %>
        <div class="omp_card-1-3 omp_card-1-3-empty">
        </div>

        <% else %>

        <div class="omp_card-1-3 d-flex flex-row align-items-center justify-content-between">
          <img src="https://fr.web.img4.acsta.net/pictures/15/07/27/15/04/271855.jpg" class="omp_card-avatar" alt="">
          <div class="omp_card-column-lg">
            <div class="d-flex justify-content-between">
              <p class="omp_sitter-name omp_headers-font"><%= sitting.user.first_name.capitalize %></p>
              <div>
                <span class="omp_pet-likes"><i class="fas fa-comment"></i> 37</span>
                <span class="omp_pet-likes ml-2"><i class="fas fa-heart"></i> 4.8</span>
              </div>
            </div>
            <span class="omp_sitting_dates omp_headers-font"><i class="fas fa-calendar"></i> <%= sitting.start_date.strftime('%a %d %b') %> - <%= sitting.end_date.strftime('%a %d %b') %></span>
          </div>
          <div>

            <%= link_to pet_path(pet), class: "" do %>
              <i class="omp_card-large-i fas fa-user"></i>
            <% end %>
            <i class="omp_card-large-i fas fa-ellipsis-h"></i>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
